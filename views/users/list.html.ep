<html>
<head>
<title>User Listing</title>
</head>
<body>

<h1>User Listing</h1>
<% if ($users) { %>
<ul>
  <% for my $user (@{$users}) { %>
  <li>
    <a href="/users/<%= $user->{'username'} %>"><%= $user->{'username'} %></a>&nbsp;
    <%= $user->{'firstname'} %>&nbsp;
    <%= $user->{'lastname'} %>&nbsp;
    <%= $user->{'email'} %>&nbsp;
    <%= $user->{'url'} %>&nbsp;
    <%= $user->{'tz'} %>
  </li>
  <% } %>
</ul>
<% } else { %>
<p>No users found.</p>
<% } %>

</body>
</html>
