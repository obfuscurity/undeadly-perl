<html>
<head>
<title>Articles</title>
</head>
<body>

<h1>Articles</h1>
<% if ($articles) { %>
<ul>
  <% for my $article (@{$articles}) { %>
  <li>
    <a href="/articles/<%= article.id'} %>"><%= $article->{'title'} %></a>&nbsp;
    <%= $article->{'user'} %>&nbsp;
    <%= $article->{'epoch'} %>&nbsp;
    <%= $article->{'dept'} %>&nbsp;
    <%= $article->{'content'} %>&nbsp;
    <%= $article->{'description'} %>
    <%= $article->{'format'} %>
  </li>
  <% } %>
</ul>
<% } else { %>
<p>No articles found.</p>
<% } %>

</body>
</html>
